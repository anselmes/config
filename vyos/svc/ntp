  ntp {
    allow-client {
      address 127.0.0.0/8
      address 169.254.0.0/16
      address 10.0.0.0/8
      address 172.16.0.0/12
      address 192.168.0.0/16
      address ::1/128
      address fe80::/10
      address fc00::/7
    }
    listen-address 172.16.0.1
    server 0.ca.pool.ntp.org {
    }
    server 1.ca.pool.ntp.org {
    }
    server 2.ca.pool.ntp.org {
    }
    server 3.ca.pool.ntp.org {
    }
  }
}
